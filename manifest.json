{
	"manifest_version": 3,
	"name": "auto-b64d",
	"description": "base64로 인코드된 링크를 자동으로 디코드",
	"version": "1.0",
	"icons": {
		"128": "128.png"
	},
	"permissions": [
		"background",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"https://arca.live/b/scottoberg/*",
		"https://www.youtube.com/watch?v=G30Zb1uX5sk*"
	],
	"content_scripts": [
		{
			"matches": [ "https://arca.live/b/scottoberg/*", "https://www.youtube.com/watch?v=G30Zb1uX5sk*" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"service_worker": "bg.js"
	},
	"action": {
		"default_popup": "popup.html"
	}
}
